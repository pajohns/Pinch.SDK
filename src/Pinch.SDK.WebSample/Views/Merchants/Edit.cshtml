@using System.Security.Cryptography.X509Certificates
@model Pinch.SDK.Merchants.MerchantUpdateOptions

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Managed Merchant</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="CompanyName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CompanyName" class="form-control" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CompanyEmail" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CompanyEmail" class="form-control" />
                <span asp-validation-for="CompanyEmail" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CompanyPhone" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CompanyPhone" class="form-control" />
                <span asp-validation-for="CompanyPhone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BankAccountName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="BankAccountName" class="form-control" />
                <span asp-validation-for="BankAccountName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BankAccountNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="BankAccountNumber" class="form-control" />
                <span asp-validation-for="BankAccountNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BankAccountRoutingNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="BankAccountRoutingNumber" class="form-control" />
                <span asp-validation-for="BankAccountRoutingNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LegalStreetAddress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LegalStreetAddress" class="form-control" />
                <span asp-validation-for="LegalStreetAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LegalSuburb" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LegalSuburb" class="form-control" />
                <span asp-validation-for="LegalSuburb" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LegalState" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LegalState" class="form-control" />
                <span asp-validation-for="LegalState" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LegalPostcode" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LegalPostcode" class="form-control" />
                <span asp-validation-for="LegalPostcode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TradingStreetAddress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TradingStreetAddress" class="form-control" />
                <span asp-validation-for="TradingStreetAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TradingSuburb" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TradingSuburb" class="form-control" />
                <span asp-validation-for="TradingSuburb" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TradingState" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TradingState" class="form-control" />
                <span asp-validation-for="TradingState" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TradingPostcode" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TradingPostcode" class="form-control" />
                <span asp-validation-for="TradingPostcode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Country (Only AU, US, UK; at the moment)</label>
            <div class="col-md-10">
                <input asp-for="TradingCountry" class="form-control" />
                <span asp-validation-for="TradingCountry" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BankStatementLabel" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="BankStatementLabel" class="form-control" />
                <span asp-validation-for="BankStatementLabel" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CompanyRegistrationNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CompanyRegistrationNumber" class="form-control" />
                <span asp-validation-for="CompanyRegistrationNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CompanyWebsiteUrl" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CompanyWebsiteUrl" class="form-control" />
                <span asp-validation-for="CompanyWebsiteUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NatureOfBusiness" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NatureOfBusiness" class="form-control" />
                <span asp-validation-for="NatureOfBusiness" class="text-danger"></span>
            </div>
        </div>

        <h4>Contacts</h4>
        @for (int i = 0; i < Model.Contacts.Count(); i++)
        {
            <input type="hidden" asp-for="Contacts[i].Id" />

            <div class="form-group">
                <label class="col-md-2 control-label">First Name</label>
                <div class="col-md-10">
                    <input asp-for="Contacts[i].FirstName" class="form-control" />
                    <span asp-validation-for="Contacts[i].FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Contacts[i].LastName" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Contacts[i].LastName" class="form-control" />
                    <span asp-validation-for="Contacts[i].LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Contacts[i].ContactType" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="Contacts[i].ContactType">
                        <option value="owner">Owner</option>
                        <option value="director">Director</option>
                        <option value="shareholder">Shareholder</option>
                        <option value="executive">Executive</option>
                    </select>
                    <span asp-validation-for="Contacts[i].ContactType" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Contacts[i].Phone" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Contacts[i].Phone" class="form-control" />
                    <span asp-validation-for="Contacts[i].Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Contacts[i].Dob" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Contacts[i].Dob" class="form-control" />
                    <span asp-validation-for="Contacts[i].Dob" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Contacts[i].GovernmentNumber" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Contacts[i].GovernmentNumber" class="form-control" />
                    <span asp-validation-for="Contacts[i].GovernmentNumber" class="text-danger"></span>
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
